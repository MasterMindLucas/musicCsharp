@{
    Layout = null;
}

<!DOCTYPE html>

@using System.Data;
@using XmlCrud.App_Code;

@{ 
    SongMethods mySongMethods = Session["playlistClass"] as SongMethods;
    string file = Session["file"] as string;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <b><a href="~/index.cshtml">index</a></b>

    <h1>voer hier de gegevens in.</h1>
    <form class="" method="post" action="#">

        <div class="form-group row">
            <label for="id">ID:</label>
            <div class="col-sm-10">
                <input type="text" id="id" name="id" placeholder="ID" /> <br><br>
            </div>
        </div>

        <div class="form-group row">
            <label for="artist">Artiest:</label>
            <div class="col-sm-10">
                <input type="text" id="artist" name="artist" placeholder="Artist" /> <br><br>
            </div>
        </div>

        <div class="form-group row">
            <label for="title">Titel:</label>
            <div class="col-sm-10">
                <input type="text" id="title" name="title" placeholder="Title" /> <br><br>
            </div>
        </div>

        <div class="form-group row">
            <label for="year">Jaar:</label>
            <div class="col-sm-10">
                <input type="text" id="year" name="year" placeholder="year" /> <br><br>
            </div>
        </div>

        <div class="form-group row">
            <label for="genre">Genre:</label>
            <div class="col-sm-10">
                <input type="text" id="genre" name="genre" placeholder="genre" /> <br><br>
            </div>
        </div>

        <div class="form-group row">
            <label for="time">Tijd:</label>
            <div class="col-sm-10">
                <input type="text" id="time" name="time" placeholder="Time" /> <br><br>
            </div>
        </div>

        <div class="form-group row">
            <label for="file">Bestandsnaam:</label>
            <div class="col-sm-10">
                <input type="text" id="file" name="file" placeholder="FileName" /> <br><br>
            </div>
        </div>

        <input type="submit" value="Submit">
    </form>

    @if (IsPost)
    {
        DataRow dr = mySongMethods.GetEmtyDataRow();

        dr["id"] = Request.Form["id"];
        dr["artist"] = Request.Form["artist"];
        dr["title"] = Request.Form["title"];
        dr["year"] = Request.Form["year"];
        dr["genre"] = Request.Form["genre"];
        dr["time"] = Request.Form["time"];
        dr["file"] = Request.Form["file"];

        mySongMethods.CreateSong(dr);
        Response.Redirect(@"~/index.cshtml");
    }

</body>
</html>
